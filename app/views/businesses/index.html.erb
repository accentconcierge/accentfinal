<%=render 'layouts/adminmenu'%>
<p id="notice"><%= notice %></p>

<h1>Listing Businesses</h1>

<table>
  <thead>
    <tr>
      <th>Companyname</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Website</th>
      <th>Address</th>
      <th>Active</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.companyname %></td>
        <td><%= business.telephone %></td>
        <td><%= business.email %></td>
        <td><%= business.website %></td>
        <td><%= business.address %></td>
        <td><%= business.active %></td>
        <td><%= business.rating %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Business', new_business_path %>
