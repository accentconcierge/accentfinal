<p id="notice"><%= notice %></p>

<h1>Listing Service Histories</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Service</th>
      <th>Charge</th>
      <th>Feedback</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_histories.each do |service_history| %>
      <tr>
        <td><%= service_history.user %></td>
        <td><%= service_history.service %></td>
        <td><%= service_history.charge %></td>
        <td><%= service_history.feedback %></td>
        <td><%= link_to 'Show', service_history %></td>
        <td><%= link_to 'Edit', edit_service_history_path(service_history) %></td>
        <td><%= link_to 'Destroy', service_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

